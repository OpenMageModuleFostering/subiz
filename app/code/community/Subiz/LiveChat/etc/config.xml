<config>
  <modules>
    <Subiz_LiveChat>
      <version>1.0.1</version>
    </Subiz_LiveChat>
  </modules>

  <global>
    <blocks>
      <subiz_livechat>
        <class>Subiz_LiveChat_Block</class>
      </subiz_livechat>
    </blocks>
    <helpers>
      <subiz_livechat>
        <class>Subiz_LiveChat_Helper</class>
      </subiz_livechat>
    </helpers>
    <models>
      <subiz_livechat>
        <class>Subiz_LiveChat_Model</class>
      </subiz_livechat>
    </models>
    <events>
      <admin_system_config_changed_section_subiz_livechat>
        <observers>
          <subiz_livechat>
            <type>singleton</type>
            <class>Subiz_LiveChat_Model_Observer</class>
            <method>clearCacheAfterChangeConfig</method>
          </subiz_livechat>
        </observers>
      </admin_system_config_changed_section_subiz_livechat>
    </events>
    <resources>
      <subiz_setup>
        <setup>
          <module>Subiz_LiveChat</module>
          <class>Subiz_LiveChat_Model_Resource_Setup</class>
        </setup>
      </subiz_setup>
    </resources>
  </global>

  <frontend>
    <layout>
      <updates>
        <subiz_livechat>
          <file>subiz_livechat.xml</file>
        </subiz_livechat>
      </updates>
    </layout>
  </frontend>

  <admin>
    <routers>
      <subiz_livechat>
        <use>admin</use>
        <args>
          <module>Subiz_LiveChat_Adminhtml</module>
          <frontName>subiz</frontName>
        </args>
      </subiz_livechat>

      <adminhtml>
        <args>
          <modules>
            <Subiz_LiveChat before="Mage_Adminhtml">Subiz_LiveChat_Adminhtml</Subiz_LiveChat>
          </modules>
        </args>
      </adminhtml>
    </routers>
  </admin>

</config>
